<!doctype html>
<html>
    <head>
        <title>The Sentence Game</title>
        <link rel="stylesheet" href="/stylesheets/style.css">
    </head>
    <body>
    <%if(user){%>
    <div class="heading">
        <div class="title">
            <h1>The Sentence Game</h1>
        </div>
        <div class="nav-container">
            <a href="/games" class="navbar-link"><h2>games</h2></a>
            <a href="/newgame" class="navbar-link"><h2>new game</h2></a>
        </div>
        <div class="user">
            <h3>logged in as <%= user.username %></h3>
            <a href="/signout"><h3>sign out</h3></a>
        </div>
    </div>
    <%}%>
    <div class="page">
            <div class="page-body">
                <%if(game.finished){%>
                    <p><%= game.content %></p>
                <%} else {%>
                    <p><%= game.sentence %></p>
                    <form action="/game" method="post" class="game">
                        <input type="hidden" name="gameId" value="<%= game.id%>"/>
                        <textarea name="sentence"></textarea>
                        <input type="submit" value="submit"/>
                    </form>
                <%}%>
            </div>
    </div>
    </body>
</html>